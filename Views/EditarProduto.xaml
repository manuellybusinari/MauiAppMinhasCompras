<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppMinhasCompras.Views.EditarProduto"
             Title="{Binding Descricao}">


    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Salvar" Clicked="ToolbarItem_Clicked" />

    </ContentPage.ToolbarItems>

    <VerticalStackLayout Spacing="20" Padding="25" Margin="25">

        <Label Text="Descrição do produto: " />
        <Entry x:Name="txt_descricao"  Text="{Binding Descricao}"/>

        <Label Text="Quantidade: "/>
        <Entry x:Name="txt_qtd" Text="{Binding Quantidade}"
               Keyboard="Numeric" />

        <Label Text="Preço unitário do produto: "/>
        <Entry x:Name="txt_preco" Text="{Binding Preco}"
               Keyboard="Numeric" />

        <Label Text="Data da compra:" />
        <DatePicker x:Name="dp_dataCadastro" Format="dd/MM/yyyy" />

    </VerticalStackLayout>
</ContentPage>

